{% form_theme form _self %}

{% block ckeditor_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    <script type="text/javascript" src="{{ asset('bundles/symtoockeditor/ckeditor.js') }}"></script>
    <script type="text/javascript">

        CKEDITOR.replace("{{ id }}",{
            width: jQuery('#{{ id }}').width(),
            height: jQuery('#{{ id }}').height(),
            toolbar: {{ toolbar | json_encode | raw }},
            {% if ui_color is not null %}
                uiColor: {{ ui_color }},
            {% endif %}
            {% if ui_skin is not null %}
                skin: '{{ ui_skin }}',
            {% endif %}
            language: 'sk',
            entities: false,
            entities_latin: false,
            entities_processNumerical: true,
            filebrowserBrowseUrl: '{{ asset(browser) | raw }}',
            filebrowserImageBrowseUrl: '{{ asset(browser_image) | raw}}',
        });
    </script>
{% endspaceless %}
{% endblock %}